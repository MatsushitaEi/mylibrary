<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://127.0.0.1:3306/MY_LIBRARY</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<mapping resource="BooksEntity.hbm.xml"></mapping>
		<mapping resource="UsersEntity.hbm.xml"></mapping>
		<mapping resource="FriendsEntity.hbm.xml"></mapping>
		<mapping resource="ReadBooksEntity.hbm.xml"></mapping>
		<mapping resource="ReadPageEntity.hbm.xml"></mapping>
	</session-factory>
</hibernate-configuration>
